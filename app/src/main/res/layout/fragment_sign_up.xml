<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    tools:context=".SignUpFragment">


    <TextView
        android:id="@+id/up001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Create Account,"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/up002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/up001"
        android:text="Sign up to get started!"
        android:textSize="32dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/up0003"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up002"
        android:layout_marginTop="30dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/up0004"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/up003"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up0003"
        android:layout_marginTop="5dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/up004"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email ID" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/up005"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up003"
        android:layout_marginTop="5dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/up006"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password(8+ characters)" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/up007"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up005"
        android:layout_marginTop="5dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/up008"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/up009"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up007"
        android:layout_marginTop="5dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/up01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/up011"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up009"
        android:layout_marginTop="5dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/up012"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/up013"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up011"
        android:layout_marginTop="5dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/up014"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bio" />

    </com.google.android.material.textfield.TextInputLayout>

    <android.widget.Button
        android:id="@+id/up015"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up013"
        android:layout_marginTop="30dp"
        android:background="@drawable/email_button"
        android:gravity="center"
        android:padding="7dp"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up015"
        android:layout_marginTop="15dp"
        android:layout_weight="11">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:text="Already a member, "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/to_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:clickable="true"
            android:gravity="left"
            android:text="Sign in"
            android:textColor="@color/shade"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>